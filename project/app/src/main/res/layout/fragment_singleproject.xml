<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#372859EC">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarsingleproject"
        android:layout_width="412dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="407dp"
        android:layout_height="613dp"
        android:layout_below="@id/tvProjectName"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="3dp"
        android:contentDescription="@string/project_x_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProjectName">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStartDate"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/project_start_date"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tStartDate"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="#77A8E4"
                android:text="2022.09.01."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvEndDate"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/project_end_date"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tEndDate"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="#77A8E4"
                android:text="2022.10.01."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvClient"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/project_client"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tClient"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="#77A8E4"
                android:text="XY"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvLength"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/project_approx_length"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tLength"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="#77A8E4"
                android:text="7 days"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/project_description"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tDesc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#77A8E4"
                android:text="Random description"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvUnfinished"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:fontFamily="sans-serif-medium"
                android:text="Number of Unfinished Tasks:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvsDate"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:background="#77A8E4"
                android:text="16"
                android:textAlignment="center"
                android:textSize="34sp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvProjectName"
        android:layout_width="414dp"
        android:layout_height="59dp"
        android:layout_below="@id/toolbarsingleproject"
        android:fontFamily="sans-serif-medium"
        android:text="@string/project_x_info"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#081978"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarsingleproject" />

</RelativeLayout>